# since a string is a location and length, we drop the length and keep the
# location as a reference
: uuidset "0123456789abcdef" drop ;

: hexrand uuidset rand 15 * round + 1 ;

: uuid
  hexrand     # (prime the random number generator first)
  8 times hexrand print again
  45 emit
  4 times hexrand print again
  45 emit
  4 times hexrand print again
  45 emit
  4 times hexrand print again
  45 emit
  12 times hexrand print again
;

: manyuuids 16 times uuid cr again ;

manyuuids
